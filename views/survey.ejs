<!DOCTYPE html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/Content/survey.css">
</head>
<body> 
    
<main>
  <div class="jumbotron">
    <h1 class="display-4">Welcome to <%= title %></h1>
    <p class="lead">Add, view, and manage survey entries below.</p>
    <hr class="my-4">
  </div>

  <div> 
  <h2> Add New Survey Entry</h2>

<!-- form for adding a new entry to the survey -->
  <form action="/survey/add" method="POST">
    <label for="studentName">Student Name:</label>
    <input type="text" name="studentName" placeholder= "Enter full name" required><br><br>

    <label for="studentId">Student ID:</label>
    <input type="text" name="studentId" placeholder= "Enter student ID" required><br><br>

    <label for="country">Country of Origin:</label>
    <input type="text" name="country" placeholder= "Enter country of origin" required><br><br>

    <label for="program">Academic Program:</label>
    <input type="text" name="program" placeholder= "Enter program name" required><br><br>

    <button type="submit" class="hero-button">Add to Survey</button>
  </form>

<!-- displaying the survey entries in a table -->
  <h2>Survey Entries</h2>
  <table>
    <thead>
      <tr> 
        <th>Student Name</th>
        <th>Student ID</th>
        <th>Country</th>
        <th>Program</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% if (surveys.length == 0) { %>
    <tr>
      <td colspan="5" style="text-align:center;"> No survey entries available</td>
    </tr>
    <% } else { %> 
      <% surveys.forEach(survey => { %>
      <tr>
        <td><%= survey.studentName %></td>
        <td><%= survey.studentId %></td>
        <td><%= survey.country %></td>
        <td><%= survey.program %></td>
        <td>
          <form action="/survey/edit/<%= survey.id %>" method="POST" style="display:inline;">
            <button type="submit">Edit</button>
          </form>
          <a href="/survey/delete/<%= survey.id %>">Delete</a>
        </td>
      </tr>
      <% }); %>
    <% } %>
    </tbody>
    </table>
  </div>
</main>
</body>
</html>

