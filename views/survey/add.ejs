<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->

<link rel= "stylesheet" href= "Content\about.css"/>
<link rel= "stylesheet" href= "Content\jumbotron.css"/>

<main>
  <div class="jumbotron">
    <h1 class="display-4">Hello! Add a survey!</h1>
    <hr class="my-4">
  </div>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST" action="/survey/add">
                <div class="form-group">
                    <label for="NameTextField">Student Name</label>
                    <input type="text" class="form-control" id="NameTextField" placeholder="Enter your name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="studentIdTextField">studentId</label>
                    <input type="text" class="form-control" id="studentIdTextField" placeholder="Enter your studentId " name="studentId" required>
                </div>
                <div class="form-group">
                    <label for="countryOfOriginTextField">What is your country Of Origin?</label>
                    <input type="text" class="form-control" id="countryOfOriginTextField" placeholder="Country of Origin" name="countryOfOrigin" required>
                </div>
                <div class="form-group">
                    <label for="academicProgramTextField">academicProgram</label>
                    <input type="text" class="form-control" id="academicProgramTextField" placeholder="Enter the academicProgram of the week" name="academicProgram" required>
                </div>
                
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="button" onclick="window.location.href='/survey';">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>